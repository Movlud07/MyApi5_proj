@model List<CategoryGetResource>

@{
    ViewData["Title"] = "Index";
    int no = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a asp-area="Admin" asp-controller="Category" asp-action="Create">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                ProductCount
                            </th>
                            <th>
                                Image
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @no
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.ProductsCount
                                    </td>
                                    <td>
                                        <a src="@item.ImageUrl" style="50px"></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>

                                no++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>