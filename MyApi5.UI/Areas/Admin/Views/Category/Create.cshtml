@model CategoryCreateRequest

@{
    ViewData["Title"] = "Create";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Category" asp-action="Create">
                <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                    <span class="text text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FormFile"></label>
                    <input class="form-control" asp-for="@Model.FormFile" accept="image/*" placeholder="FormFile">
                    <span class="text text-danger" asp-validation-for="@Model.FormFile"></span>
                </div>
         @*        <select asp-for="@Model.CategoryId">
                    @{
                        foreach (CategoryGetDto category in ViewBag.Categories)
                        {
                                <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select> *@
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-area="Admin" asp-controller="Category" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>


@section scripts{
    <script>
        if (@TempData["Error"] != null) {
            alert(@TempData["Error"])
        }
    </script>
}