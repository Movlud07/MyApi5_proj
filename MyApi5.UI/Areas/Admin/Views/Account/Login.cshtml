@model LoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/admin/custom/StyleSheet.css" />
    <!-- Font Awesome CDN link for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <div class="title"><span>Login Form</span></div>
        <form action="#" method="post">
            <div class="row">
                <i class="fas fa-user"></i>
                <input type="text" asp-for="@Model.Username" placeholder="UserName" />
            </div>
            <div class="row">
                <i class="fas fa-lock"></i>
                <input type="password" asp-for="@Model.Password" placeholder="Password" />
            </div>
            <div class="pass"><a asp-controller="User" asp-action="ForgetPassword">Forgot password?</a></div>
            <div class="row button">
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
</body>
</html>
@section scripts {
    <script>
        if (@TempData["Error"] != null) {
            alert(@TempData["Error"])
        }
    </script>
}
